<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TestStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseTextInputLayoutForLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeErrorColor">@color/lab_red</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/lab_black</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextColor">@color/lab_black</item>
        <item name="startIconTint">@color/lab_black</item>
    </style>

    <style name="BaseTextInputLayoutForNote">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeErrorColor">@color/lab_red</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/lab_red</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextColor">@color/lab_red</item>
        <item name="startIconTint">@color/lab_black</item>
    </style>

    <style name="BaseEditTextForLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bgr_input_shape_corner</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:padding">@dimen/base_high_padding</item>
        <item name="android:textColor">@color/lab_black</item>
        <item name="android:textColorHighlight">@color/lab_black</item>
        <item name="android:textColorLink">@color/lab_black</item>
        <item name="android:textSize">@dimen/base_normal_text</item>
    </style>

    <style name="BaseEditTextForNote">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@drawable/bgr_input_shape_corner</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:padding">@dimen/base_high_padding</item>
        <item name="android:textColor">@color/lab_black</item>
        <item name="android:textColorHighlight">@color/lab_black</item>
        <item name="android:textColorLink">@color/lab_black</item>
        <item name="android:textSize">@dimen/base_normal_text</item>
    </style>

    <style name="BaseTextViewStudentCodeClass">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bgr_rectangle_outline_for_ministudent</item>
        <item name="android:drawablePadding">@dimen/base_small_padding</item>
        <item name="android:padding">@dimen/base_small_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/base_helper_text</item>
    </style>

    <style name="BaseButtonSubmit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/bgr_rectangle_lab_black</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/lab_white</item>
        <item name="android:textSize">@dimen/base_normal_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BaseTextViewDateTimeSelector">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bgr_input_date_time_rectangle_corner</item>
        <item name="android:padding">@dimen/base_high_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/lab_red</item>
        <item name="android:textSize">@dimen/base_normal_text</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>