<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/base_normal_margin">

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/base_normal_text"
        tools:text="22" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom|center"
        android:orientation="horizontal">

        <View
            android:id="@+id/v_noti_period_dot"
            android:layout_width="@dimen/base_width_small_cir"
            android:layout_height="@dimen/base_height_small_cir"
            android:background="@drawable/bgr_periods_circular_lab_red"
            android:visibility="gone" />

        <View
            android:id="@+id/v_noti_note_dot"
            android:layout_width="@dimen/base_width_small_cir"
            android:layout_height="@dimen/base_height_small_cir"
            android:background="@drawable/bgr_notes_circular_lab_blue"
            android:visibility="gone" />
    </LinearLayout>
</FrameLayout>