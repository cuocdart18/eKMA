<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_normal_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_avatar"
            android:layout_width="@dimen/base_width_avatar"
            android:layout_height="@dimen/base_height_avatar"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:src="@drawable/user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@id/civ_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base_small_margin"
                android:text="Ngo Cuoc Dat"
                android:textColor="@color/lab_black"
                android:textSize="@dimen/base_normal_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base_small_margin"
                android:text="Vai lon luon"
                android:textColor="@color/lab_black"
                android:textSize="@dimen/base_helper_text" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base_small_margin"
                android:text="3h"
                android:textColor="@color/lab_black"
                android:textSize="@dimen/base_helper_text" />

            <TextView
                android:id="@+id/tv_active_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base_small_margin"
                android:text="Dang hoat dong"
                android:textColor="@color/lab_black"
                android:textSize="@dimen/base_helper_text"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</layout>